{
    "app-id": "org.tuxpaint.Tuxpaint",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--persist=.tuxpaint"
    ],
    "command": "tuxpaint",
    "rename-desktop-file": "tuxpaint.desktop",
    "rename-icon": "tuxpaint",
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/gtk-doc",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules": [
        "shared-modules/SDL/SDL-1.2.15.json",
        "shared-modules/smpeg/smpeg-0.4.5.json",
        "shared-modules/SDL/SDL_mixer-1.2.12.json",
        "shared-modules/SDL/SDL_ttf-2.0.11.json",
        "shared-modules/SDL/SDL_image-1.2.12.json",
        "shared-modules/SDL/SDL_pango-0.1.2.json",
        {
            "name": "libpaper",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin",
                "/sbin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://http.debian.net/debian/pool/main/libp/libpaper/libpaper_1.1.28.tar.gz",
                    "sha256": "c8bb946ec93d3c2c72bbb1d7257e90172a22a44a07a07fb6b802a5bb2c95fddc"
                },
                {
                    "type": "script",
                    "commands": [
                        "autoreconf -vfi"
                    ],
                    "dest-filename": "autogen.sh"
                }
            ]
        },
        "ImageMagick.json",
        {
            "name": "tuxpaint",
            "no-autogen": true,
            "no-parallel-make": true,
            "sources": [
                {
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8901,
                        "url-template": "https://downloads.sourceforge.net/project/tuxpaint/tuxpaint/${version}/tuxpaint-${version}.tar.gz"
                    },
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/tuxpaint/tuxpaint/0.9.25/tuxpaint-0.9.25.tar.gz",
                    "sha256": "c1185b7ba97701ae48639ade3e55488bd695a919a7b5b38f5b2ab0df93b6e19d"
                },
                {
                    "type": "patch",
                    "paths": [
                        "tuxpaint-bash-completion.patch",
                        "tuxpaint-Set-flatpak-app-profile.patch",
                        "tuxpaint-Install-desktop-file-and-icons.patch"
                    ]
                },
                {
                    "type": "file",
                    "path": "org.tuxpaint.Tuxpaint.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "tuxpaint.conf"
                }
            ],
            "post-install": [
                "install -m644 -Dt /app/share/appdata org.tuxpaint.Tuxpaint.appdata.xml",
                "install -m644 -Dt /app/etc/tuxpaint tuxpaint.conf"
            ]
        },
        {
            "name": "tuxpaint-stamps",
            "buildsystem": "simple",
            "sources": [
                {
                    "//": "TODO: add x-checker-data. Unfortunately the version number appears twice, once with dashes and once with dots.",
                    "type": "archive",
                    "url": "https://downloads.sourceforge.net/project/tuxpaint/tuxpaint-stamps/2020-12-27/tuxpaint-stamps-2020.12.27.tar.gz",
                    "sha256": "df53bbd866d4b045e8148f7271efd7d4c3e689f4511796ab31d4b95a98733235"
                }
            ],
            "build-commands": [
                "make PREFIX=/app install-all"
            ]
        }
    ]
}